<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="net.ddns.scravlon.splitmefull.sadNumber"
    tools:showIn="@layout/activity_sad_number"
    android:background="@drawable/backgound">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <SeekBar
            android:id="@+id/numSeek"
            android:layout_width="142dp"
            android:layout_height="31dp"
            android:layout_alignEnd="@+id/textView"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignRight="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_below="@+id/split_people"
            android:layout_column="0"
            android:layout_row="2"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="101dp" />

        <EditText
            android:id="@+id/split_people"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_column="0"
            android:layout_row="1"
            android:ems="10"
            android:inputType="number"
            android:textColor="#AA0000"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="76dp"
            tools:layout_editor_absoluteY="234dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_column="0"
            android:layout_marginTop="60dp"
            android:layout_row="0"
            android:text="Numbers of people"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="60dp"
            tools:layout_editor_absoluteY="60dp" />

        <Button
            android:id="@+id/split_submit"
            style="@android:style/Widget.Button.Inset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/split_people"
            android:layout_alignBottom="@+id/split_people"
            android:layout_toEndOf="@+id/split_people"
            android:layout_toRightOf="@+id/split_people"
            android:text="Submit" />

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_home_footer"/>


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>

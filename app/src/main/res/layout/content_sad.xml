<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="net.ddns.scravlon.splitmefull.sadActivity"
    tools:showIn="@layout/activity_sad"
    android:background="@drawable/backgound"
    >

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="0dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scrollrl"
            android:layout_centerHorizontal="true"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_home_footer"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="445dp" />

        <ScrollView
            android:id="@+id/scrollrl"
            android:layout_width="match_parent"
            android:layout_height="430dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

                <ScrollView
                    android:id="@+id/scrollView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp">

                    <RelativeLayout
                        android:id="@+id/rldmain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/mainrl"
                            android:layout_width="368dp"
                            android:layout_height="wrap_content"
                            tools:layout_editor_absoluteX="8dp"
                            tools:layout_editor_absoluteY="8dp">

                            <Button
                                android:id="@+id/split_split"
                                android:layout_width="75dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/button_border"
                                android:text="Split"
                                android:textStyle="bold" />

                            <ScrollView
                                android:id="@+id/scrollid"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/split_split"
                                tools:layout_editor_absoluteX="8dp"
                                tools:layout_editor_absoluteY="8dp">

                                <RelativeLayout
                                    android:id="@+id/rellalllay"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:layout_editor_absoluteX="8dp"
                                    tools:layout_editor_absoluteY="8dp">

                                    <LinearLayout
                                        android:id="@+id/ll"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="24dp"
                                        android:orientation="vertical"
                                        tools:layout_editor_absoluteX="8dp"
                                        tools:layout_editor_absoluteY="168dp" />


                                    <LinearLayout
                                        android:id="@+id/lledittext"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_below="@+id/numSeek"
                                        android:layout_marginTop="20dp"
                                        android:layout_toRightOf="@id/ll"
                                        android:orientation="vertical" />

                                    <HorizontalScrollView
                                        android:id="@+id/hori"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_toRightOf="@+id/lledittext"
                                        >

                                        <RelativeLayout
                                            android:id="@+id/rldummy"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_marginTop="20dp"
                                            tools:layout_editor_absoluteX="8dp"
                                            tools:layout_editor_absoluteY="8dp" />
                                    </HorizontalScrollView>


                                    <LinearLayout
                                        android:id="@+id/llbuttons"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginTop="20dp"
                                        android:layout_toRightOf="@+id/hori"
                                        android:orientation="vertical" />

                                    <LinearLayout
                                        android:id="@+id/llresult"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginTop="20dp"
                                        android:layout_toRightOf="@+id/ll"
                                        android:orientation="vertical" />

                                </RelativeLayout>
                            </ScrollView>

                            <Button
                                android:id="@+id/split_clear"
                                android:layout_width="75dp"
                                android:layout_height="wrap_content"
                                android:layout_above="@+id/scrollid"
                                android:layout_alignParentTop="true"
                                android:layout_toRightOf="@+id/split_split"
                                android:background="@drawable/button_border_clear"
                                android:text="Clear"
                                android:textStyle="bold" />

                            <CheckBox
                                android:id="@+id/check_gst"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginEnd="15dp"
                                android:layout_marginRight="10dp"
                                android:checked="true"
                                android:text="GST 6%"
                                app:buttonTint="@android:color/holo_red_dark" />

                            <CheckBox
                                android:id="@+id/check_serv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_toLeftOf="@+id/check_gst"
                                android:layout_toStartOf="@+id/check_gst"
                                android:checked="true"
                                android:text="Service 10%"
                                app:buttonTint="@android:color/holo_red_dark" />

                            <TextView
                                android:id="@+id/split_total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignEnd="@+id/check_gst"
                                android:layout_alignRight="@+id/check_gst"
                                android:layout_below="@+id/check_gst"
                                android:layout_marginRight="15dp"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rld"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/mainrl">


                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="15dp"
                                android:layout_marginStart="15dp"
                                android:text="Divide &amp; Add: "
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/addDiv"
                                android:layout_width="40dp"
                                android:layout_height="30dp"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@+id/textView2"
                                android:layout_toRightOf="@+id/textView2"
                                app:srcCompat="@drawable/images" />


                            <EditText
                                android:id="@+id/diviteItem1"
                                android:layout_width="75dp"
                                android:layout_height="40dp"
                                android:layout_alignParentTop="true"
                                android:layout_toEndOf="@+id/addDiv"
                                android:layout_toRightOf="@+id/addDiv"
                                android:ems="10"
                                android:hint="Item 1"
                                android:inputType="numberDecimal" />

                            <EditText
                                android:id="@+id/diviteItem2"
                                android:layout_width="75dp"
                                android:layout_height="40dp"
                                android:layout_toRightOf="@+id/diviteItem1"
                                android:ems="10"
                                android:hint="Item 2"
                                android:inputType="numberDecimal"
                                android:visibility="invisible" />

                            <EditText
                                android:id="@+id/diviteItem3"
                                android:layout_width="75dp"
                                android:layout_height="40dp"
                                android:layout_toRightOf="@+id/diviteItem2"
                                android:ems="10"
                                android:hint="Item 3"
                                android:inputType="numberDecimal"
                                android:visibility="invisible" />

                        </RelativeLayout>

                    </RelativeLayout>
                </ScrollView>

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
